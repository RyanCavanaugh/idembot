{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "outDir": "bin",
        "module": "commonjs",
        "target": "esnext",
        "lib": ["es2017"],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "declaration": true,

        "baseUrl": ".",
        "paths": {
            "*": ["src/types/*"]
        }
    }
}